// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model companies {
  companyCode String @id
  companyName String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @default(now())
  users users[]
  products products[]
  stocks stocks[]
}

model users {
  userId String @id 
  username String
  password String
  email String
  fullName String
  userType UserType
  companies companies? @relation(fields: [companyCode], references: [companyCode], onDelete: Restrict)
  companyCode String?
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @default(now())
  userPermissions userPermissions[]
}

enum UserType {
  Owner
  Admin
  Officer
  Finance
  Customer_Admin 
  Customer_Service 
}

model userPermissions {
  permissionId String @id
  userId String @unique
  permissionType permissionType?
  users users @relation(fields: [userId], references: [userId], onDelete: Cascade)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @default(now())
}

enum permissionType {
  Inbound
  Outbound
  Stock_Transfer 
  Order_Management 
}

model warehouses {
  code String @id
  name String 
  address String
  status status
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @default(now())
  stocks stocks[]
}

enum status {
  active
  inactive
}

model products {
  sku String @id
  name String
  unit String
  companyCode String?
  companies companies? @relation(fields: [companyCode], references: [companyCode], onDelete: SetNull)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @default(now())
  stocks stocks[]
}

model logistics {
  logisticCode String @id
  name String @unique
  service String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @default(now())
}

model stocks {
  stockId String @id
  sku String
  code String
  companyCode String
  stock Int
  companies companies @relation(fields: [companyCode], references: [companyCode], onDelete: Restrict)
  products products @relation(fields: [sku], references: [sku], onDelete: Restrict)
  warehouses warehouses @relation(fields: [code], references: [code], onDelete: Restrict)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @default(now())
}

model materials {
  materialId String @id
  materialName String
  unit String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @default(now())
}